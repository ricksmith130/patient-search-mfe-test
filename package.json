{
  "name": "patient-search-mfe",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "serve": "concurrently \"vite build --watch\" \"vite preview --port 5174 --strictPort\"",
    "pull-host": "bash scripts/pull-host-source.sh",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:with-host": "concurrently --kill-others --success first \"yarn test:start-host\" \"yarn test:start-mfe\" \"yarn test:wait-and-run\"",
    "test:start-host": "cd ../../ncrs/spa && yarn serve:ci-test-static-server",
    "test:start-mfe": "vite build && vite preview --port 5174 --strictPort",
    "test:wait-and-run": "wait-on http://localhost:5173 http://localhost:5174 && vitest run",
    "test:local": "cross-env VITE_HOST_URL=http://localhost:5173/nationalcarerecordsservice/static/remoteEntry.js vitest",
    "test:hosted": "cross-env VITE_HOST_URL=https://test.ncrs.nhs.uk/nationalcarerecordsservice/static/remoteEntry.js vitest run",
    "test:integration": "vitest run --testPathPattern=integration",
    "test:unit": "vitest run --testPathPattern=unit"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.0",
    "@tanstack/react-table": "^8.21.3",
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "mustache": "^4.2.0",
    "nhsuk-frontend": "^10.3.1",
    "nhsuk-react-components": "6.0.0-beta.3",
    "nhsuk-react-components-extensions": "^2.3.5-beta",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-grid-system": "^8.2.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "7.9.6",
    "redux": "^5.0.1",
    "redux-first-history": "^5.2.0",
    "tslib": "^2.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@module-federation/native-federation-tests": "^0.6.2",
    "@module-federation/vite": "^1.11.0",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/jsdom": "27",
    "@types/mustache": "^4",
    "@types/node": "^24.10.1",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@types/redux-mock-store": "1",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "happy-dom": "^20.5.0",
    "jsdom": "27.4.0",
    "postcss-scss": "^4.0.9",
    "redux-mock-store": "1.5.5",
    "stylelint": "^17.0.0",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-recommended-scss": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-order": "^7.0.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "3.2.4",
    "wait-on": "^9.0.3"
  }
}
